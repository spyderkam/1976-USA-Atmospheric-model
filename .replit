entrypoint = "main.sh"
modules = ["bash", "cpp-clang14", "python-3.11", "python-base-3.13"]

[nix]
channel = "stable-24_05"
packages = ["libxcrypt", "pkg-config", "xsimd"]

[deployment]
run = ["bash", "main.sh"]
deploymentTarget = "cloudrun"

[agent]
expertMode = true

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Atmosphere Simulation"

[[workflows.workflow]]
name = "Atmosphere Simulation"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "bash main.sh"

[workflows.workflow.metadata]
outputType = "console"
